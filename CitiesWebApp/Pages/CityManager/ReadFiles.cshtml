@page
@model CitiesWebApp.Pages.FileManager.ReadFilesModel
@{
    ViewData["Title"] = "Ler Arquivos";
}

<h2>Ler Arquivos .txt</h2>

<ul>
    @foreach (var file in Model.FileNames)
    {
        <li>
            <a asp-page="ReadFiles" asp-route-file="@file">@file</a>
        </li>
    }
</ul>

@if (!string.IsNullOrEmpty(Model.FileContent))
{
    <h3>Conteúdo do arquivo:</h3>
    <pre>@Model.FileContent</pre>
}
