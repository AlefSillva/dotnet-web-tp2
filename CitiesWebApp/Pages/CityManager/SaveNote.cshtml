@page
@model CitiesWebApp.Pages.CityManager.SaveNoteModel
@{
    ViewData["Title"] = "Salvar Nota";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="content">Escreva sua nota:</label>
        <textarea asp-for="Input.Content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Input.Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@if (Model.SavedFileName != null)
{
    <div class="alert alert-success mt-3">
        Nota salva com sucesso!
        <a href="@Model.SavedFilePath" target="_blank">Clique aqui para baixar</a>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
