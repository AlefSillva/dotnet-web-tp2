@page
@model CitiesWebApp.Pages.CityManager.CreateCountryModel
@{
    ViewData["Title"] = "Create Country";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    @for (int i = 0; i < Model.Countries.Count; i++)
    {
        <div class="form-group">
            <label asp-for="Countries[@i].CountryName">Nome do País:</label>
            <input asp-for="Countries[@i].CountryName" class="form-control" />
            <span asp-validation-for="Countries[@i].CountryName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Countries[@i].CountryCode">Código do País:</label>
            <input asp-for="Countries[@i].CountryCode" class="form-control" />
            <span asp-validation-for="Countries[@i].CountryCode" class="text-danger"></span>
        </div>
    }



    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (Model.CreatedCountries?.Any() == true)
{
    <h3>Países criados:</h3>
    <ul>
        @foreach (var country in Model.CreatedCountries)
        {
            <li><strong>@country.CountryName</strong> - @country.CountryCode</li>
        }
    </ul>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
